rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- User Data & Subcollections ---
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /transactions/{transactionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Legacy Nominees: Owner OR Family Member with permission
      match /legacy_nominees/{nomineeId} {
        allow write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null && (
          request.auth.uid == userId ||
          (
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.familyLink.mainUserId == userId &&
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.familyLink.permission == true
          )
        );
      }
      
      // Legacy Documents: Owner OR Family Member with permission
      match /legacy_documents/{docId} {
        allow write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null && (
          request.auth.uid == userId ||
          (
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.familyLink.mainUserId == userId &&
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.familyLink.permission == true
          )
        );
      }
    }

    // --- Global Invites Collection ---
    match /legacy_invites/{email} {
      // Allow anyone to check if an invite exists (needed for signup check)
      allow get: if true;
      
      // Only the inviter can list, create, or delete their invites
      allow list: if request.auth != null && resource.data.inviterUid == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.inviterUid == request.auth.uid;
      allow delete: if request.auth != null && resource.data.inviterUid == request.auth.uid;
      // Allow update if inviter (e.g. changing permission)
      allow update: if request.auth != null && resource.data.inviterUid == request.auth.uid;
    }
  }
}